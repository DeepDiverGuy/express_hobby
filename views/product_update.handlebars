<h2 class="text-center mt-3 mb-3">Product Updating Form</h2>

<form action="/update/{{id}}" method="POST" class="mb-4">
  <div class="form-group">
    <label for="kind">New Kind</label>
    <input type="text" name="kind" class="form-control">
  </div>
  <div class="form-group">
    <label for="moedel">New Model</label>
    <input type="text" name="model" class="form-control">
  </div>
  <div class="form-group">
    <label for="price">New Price</label>
    <input type="text" name="price" class="form-control">
  </div>
  <input type="submit" value="Update Product" class="btn btn-primary btn-block">
</form>