<div class="text-center mt-2"> <a href="/api_reference" class="btn btn-primary">Visit API Reference Page</a> </div>
<br />
<hr />
<br />
<h2 class="text-center mt-3 mb-3">Products List</h2>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th scope="col">Kind</th>
      <th scope="col">Model</th>
      <th scope="col">Status</th>
      <th scope="col">Price</th>
      <th scope="col">Update</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each product_list}}
    <tr>
      <td>{{this.kind}}</th>
      <td>{{this.model}}</td>
      <td>{{this.status}}</td>
      <td>{{this.price}}</td>
      <td><a href="/update/{{this.id}}"> Update</a> </td>
      <td><a href="/delete/{{this.id}}"> Delete</a> </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<br />
<hr />

<br />
<h2 class="text-center mt-3 mb-3">Product Creation Form</h2>
<form action="/" method="POST" class="mb-4">
  <div class="form-group">
    <label for="kind">Kind</label>
    <input type="text" name="kind" class="form-control">
  </div>
  <div class="form-group">
    <label for="model">Model</label>
    <input type="text" name="model" class="form-control">
  </div>
  <div class="form-group">
    <label for="price">Price</label>
    <input type="text" name="price" class="form-control">
  </div>
  <input type="submit" value="Add Product" class="btn btn-primary btn-block">
</form>
